<!--
   ====================================================================

   Date and time formats that users can select from user preferences
   for viewing dates/times.  At least one value must be specified for
   each type, and formats much be valid java.text.SimpleDateFormat
   formats.  The first value specified will be the default for the
   site until it is changed using the Special:Admin tools.

   ======================================================================
-->
<date-formats>
	<date-format>d MMMM yyyy</date-format>
	<date-format>LONG</date-format>
	<date-format>MEDIUM</date-format>
	<date-format>yyyy-MM-dd</date-format>
	<date-format>dd.MM.yyyy</date-format>
</date-formats>
<time-formats>
	<time-format>HH:mm</time-format>
	<time-format>h:mm a</time-format>
</time-formats>

</configuration>
